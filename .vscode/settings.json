{
  // inspired by https://github.com/athackst/vscode_ros2_workspace/blob/humble/.vscode/settings.json
  "editor.tabSize": 2,
  "editor.rulers": [
      90
  ],
  "files.associations": {
    "*.repos": "yaml",
    "*.world": "xml",
    "*.xacro": "xml"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/build": true,
    "**/install": true,
    "**/log": true
  },
}
